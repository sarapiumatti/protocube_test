{
  "compilerOptions": {
    "declaration": false, // generated d.ts files - use only for lib
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strict": false,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "preserveConstEnums": true,
    "typeRoots": ["./typings", "node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.glsl",
    "typings/**/*.d.ts"
  ]
}
